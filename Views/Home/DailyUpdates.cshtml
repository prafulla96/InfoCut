@{
     Layout="_Layout";
}
<style>
    .container {
        background: rgba(255,255,255,0.85);
        border-radius: 16px;
        padding: 2rem;
        max-width: 700px;
        margin-top: 5rem;
        box-shadow: 0 4px 24px rgba(0,0,0,0.1);
    }

    .update-title {
          font-weight: bold;
        font-size: 1.2rem;
    }

    .update-date {
        font-size: 0.95rem;
        color: #888;
    }

    .weather-box {
        background: rgb(85, 82, 245,0.5);
        border-radius: 16px;
        padding: 1.5rem 2rem;
        margin: 0 auto 2rem auto;
        max-width: 400px;
        box-shadow: 0 4px 24px rgba(0,0,0,0.15);
        text-align: center;
    }

        .weather-box h5 {
            font-weight: bold;
            margin-bottom: 1rem;
            color: #fff;
        }

        .weather-box ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .weather-box li {
            font-size: 1.05rem;
            margin-bottom: 0.5rem;
            color: #e3e3e3;
        }
</style>
<div class="container mt-5">
    <h2 class="mb-4 text-center">Daily News Updates</h2>
    <!-- Example daily updates, replace with dynamic/news content as needed -->
    <div class="mb-4">
        <div id="live-news" class="quick-links mt-5">
            <h4>Latest Headlines</h4>
            <p>Loading news...</p>
        </div>
       
</div>      
</div>
<div id="weather-container" class="weather-box text-white mt-4">
   
</div>
<script src="/js/script.js"></script>